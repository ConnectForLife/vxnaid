<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jnj.vaccinetracker.register.screens.RegisterParticipantAdministeredVaccinesViewModel" />

        <variable
            name="flowViewModel"
            type="com.jnj.vaccinetracker.register.RegisterParticipantFlowViewModel" />

        <import type="com.jnj.vaccinetracker.common.domain.entities.Gender" />

        <import type="android.view.View" />

        <import type="android.text.InputType" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/input_group_participant_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_participant_id"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/participant_registration_details_label_participant_id"
                    android:textAppearance="@style/LabelText" />

                <TextView
                    android:id="@+id/edit_participant_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:hint="@string/participant_registration_details_label_participant_id"
                    android:longClickable="false"
                    android:text="@{viewModel.participant.participantId}"
                    android:textAppearance="@style/GeneralText" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_group_year_of_birth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_date_of_birth"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:text="@string/participant_registration_details_label_date_of_birth"
                    android:textAppearance="@style/LabelText" />

                <TextView
                    android:id="@+id/textView_participant_date_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:hint="@string/participant_registration_details_birth_date_hint"
                    android:maxHeight="70sp"
                    android:text='@{viewModel.participant.isBirthDateEstimated ? "~ " + viewModel.participant.birthDateText : viewModel.participant.birthDateText}'
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_group_gender"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="155dp"
                    android:maxLines="1"
                    android:minWidth="155dp"
                    android:text="@string/participant_registration_details_label_gender"
                    android:textAppearance="@style/LabelText" />

                <TextView
                    android:id="@+id/textView_participant_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:maxHeight="70sp"
                    android:text="@{viewModel.participant.gender == null ? `` : context.getString(viewModel.participant.gender.translation)}"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/participant_registration_administered_vaccines_description"
                android:textAlignment="center"
                android:textAppearance="@style/ScreenTitle"
                android:textSize="20sp" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="16dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/vaccine_items_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="8"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/btn_continue"
                app:layout_constraintEnd_toEndOf="@+id/label_welcome"
                app:layout_constraintStart_toStartOf="@+id/label_welcome"
                app:layout_constraintTop_toBottomOf="@+id/label_introduction"
                tools:ignore="NestedWeights">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView_no_vaccines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/administered_vaccines_no_previous_vaccines"
                    android:textAppearance="@style/LabelText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_vaccine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorTextOnLight"
                    android:text="@string/participant_registration_administered_vaccines_add_vaccine"
                    android:textAppearance="@style/ButtonTextStyling" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/participant_administered_vaccines_action_save"
                    android:textAppearance="@style/ButtonTextStyling" />
            </LinearLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_indicator"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:indeterminate="true"
            android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}" />

    </FrameLayout>
</layout>