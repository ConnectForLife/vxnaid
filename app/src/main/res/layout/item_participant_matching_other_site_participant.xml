<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.jnj.vaccinetracker.participantflow.screens.ParticipantFlowMatchingViewModel.OtherSiteParticipantItem" />

        <variable
            name="selected"
            type="boolean" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/participant_item_bg"
        android:orientation="vertical"
        app:selected="@{selected}">

        <TextView
            android:id="@+id/textView_childNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text='@{"Child Number:      " + (item.participant.childNumber != null ? item.participant.childNumber : "")}'
            android:textAppearance="@style/GeneralText"
            tools:text="98574328" />

        <TextView
            android:id="@+id/textView_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text='@{"Mobile Phone:      " + (item.participant.telephone != null ? item.participant.telephone : "")}'
            android:textAppearance="@style/GeneralText"
            tools:text="111222333" />

        <TextView
            android:id="@+id/textView_birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text='@{item.participant.isBirthDateEstimated ? "Date of Birth:      ~" + item.participant.birthDateText : "Date of Birth:        " + item.participant.birthDateText}'
            android:textAppearance="@style/GeneralText"
            tools:text="2024-01-01" />

        <TextView
            android:id="@+id/motherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text='@{"Mother Name:      " + (item.participant.motherFirstName != null ? item.participant.motherFirstName : "") + " " + (item.participant.motherLastName != null ? item.participant.motherLastName : "")}'
            android:textAppearance="@style/GeneralText"
            tools:text="Mother Name" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text='@{"Address:                " + item.participant.homeLocation}'
            android:textAppearance="@style/GeneralText"
            tools:text="Uganda,KYAMUSWA,KYAMUSWA,BUZINGO,NAKIBANGA" />

        <Button
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryLight" />

    </LinearLayout>

</layout>